body.active_admin {
   #header{
     background: -webkit-linear-gradient(-90deg, #6a7176, <%= @color %>);
   }

   #page_title {
       position: relative;
   }
   #page_title:before {
       content: "<%= @env %> - ";
       padding-left: 40px;
       color: <%= @color %>;
   }
   #page_title:after {
       position: absolute;
       top: -8px;
       left: 0;
       width: 30px;
       height: 30px;
       padding: 0;
       -webkit-border-radius: 100%;
       -moz-border-radius: 100%;
       border-radius: 100%;
       background: <%= @color %>;
       content: "!";
       color: #ffffff;
       text-align: center;
       line-height: 30px;
       font-weight: normal;
       font-size: 24px
   }
}

